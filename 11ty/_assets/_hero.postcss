.hero {
  display: flex;
  flex-direction: column;
  gap: var(--size-5);
  header {
    display: flex;
    gap: 2rem;
    h1 {
      font-size: var(--font-size-6);
    }
  }

  article {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    p {
      font-size: var(--font-size-3);
      inline-size: 100%;
    }
  }
}
